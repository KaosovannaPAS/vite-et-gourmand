{
    "version": 2,
    "builds": [
        {
            "src": "noyau_backend/**/*.php",
            "use": "vercel-php@0.7.2"
        },
        {
            "src": "api/*.php",
            "use": "vercel-php@0.7.2"
        },
        {
            "src": "v.php",
            "use": "vercel-php@0.7.2"
        },
        {
            "src": "**/*.{html,css,js,jpg,jpeg,png,gif,svg,ico}",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/noyau_backend/(.*\\.php)$",
            "dest": "/noyau_backend/$1"
        },
        {
            "src": "/api/(.*\\.php)$",
            "dest": "/api/$1"
        },
        {
            "src": "/v.php",
            "dest": "/v.php"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}