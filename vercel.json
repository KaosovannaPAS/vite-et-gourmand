{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.php",
            "use": "vercel-php@0.6.0"
        },
        {
            "src": "noyau_backend/**/*.php",
            "use": "vercel-php@0.6.0"
        },
        {
            "src": "*.php",
            "use": "vercel-php@0.6.0"
        },
        {
            "src": "**/*.{html,css,js,jpg,jpeg,png,gif,svg,ico}",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/noyau_backend/(.*\\.php)$",
            "dest": "/noyau_backend/$1"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}