{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.php",
            "use": "vercel-php@0.7.2"
        },
        {
            "src": "noyau_backend/**/*.php",
            "use": "vercel-php@0.7.2"
        },
        {
            "src": "interface_frontend/**/*.php",
            "use": "vercel-php@0.7.2"
        },
        {
            "src": "*.php",
            "use": "vercel-php@0.7.2"
        },
        {
            "src": "interface_frontend/ressources/**/*",
            "use": "@vercel/static"
        },
        {
            "src": "interface_frontend/pages/*.html",
            "use": "@vercel/static"
        },
        {
            "src": "index.html",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/noyau_backend/api/v1/(.*).php",
            "dest": "/noyau_backend/api/v1/$1.php"
        },
        {
            "src": "/noyau_backend/api/v1/(.*)",
            "dest": "/noyau_backend/api/v1/$1.php"
        },
        {
            "src": "/api/(.*).php",
            "dest": "/api/$1.php"
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/$1.php"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}