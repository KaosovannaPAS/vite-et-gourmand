{
    "version": 2,
    "builds": [
        {
            "src": "**/*.php",
            "use": "vercel-php@0.7.2"
        },
        {
            "src": "check_schema.php",
            "use": "vercel-php@0.7.2"
        },
        {
            "src": "interface_frontend/**/*.{css,js,jpg,jpeg,png,gif,svg,ico,woff,woff2,ttf,eot}",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/interface_frontend/(.*)",
            "dest": "/interface_frontend/$1"
        },
        {
            "src": "/noyau_backend/(.*)",
            "dest": "/noyau_backend/$1"
        },
        {
            "src": "/check_schema.php",
            "dest": "/check_schema.php"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.php"
        }
    ]
}