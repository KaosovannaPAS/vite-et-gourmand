{
    "version": 2,
    "builds": [
        {
            "src": "**/*.php",
            "use": "vercel-php@0.6.0"
        },
        {
            "src": "**/*.html",
            "use": "@vercel/static"
        },
        {
            "src": "**/*.js",
            "use": "@vercel/static"
        },
        {
            "src": "**/*.css",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*).php",
            "dest": "/$1.php"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ]
}